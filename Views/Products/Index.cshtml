@model IEnumerable<Valtimperium.ViewModels.ProductViewModel>

     <link  type="text/css" rel="stylesheet" href="~/css/admin.css" />

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-controller="Types" asp-action="Index">Типы товаров</a>
</p>

<p>
    <a asp-action="Create">Создать новый товар</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Название
            </th>
            <th>
                Цена 
            </th>
            <th>
                Описание
            </th>
            <th>
                Наличие
            </th>
            <th>
                Фото
            </th>
            <th>
                Тип
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Availability)
            </td>
            <td>
              <img width="100px" height="100px" src="~/prodImages/@item.Photo">
              <!-- @Html.DisplayFor(modelItem => item.Photo) --> 
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdProduct">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdProduct">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdProduct">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
